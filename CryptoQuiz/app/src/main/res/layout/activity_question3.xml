<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#408e8e8e"

            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp">
            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/question3"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/10"
                android:textSize="20sp"
                android:gravity="end"
                android:id="@+id/questionCount"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_margin="40dp"
            android:src="@drawable/q3img"
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question3Ask"
            android:id="@+id/question"
            android:layout_below="@id/img"
            android:layout_margin="12dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:id="@+id/answers1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q3a1"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/buttonPrimary"
                android:layout_margin="8dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:id="@+id/answer1"
                android:onClick="answer1bool"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q3a2"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:background="@color/buttonPrimary"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:id="@+id/answer2"
                android:onClick="answer2bool"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answers1"
            android:id="@+id/answers2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q3a3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:background="@color/buttonPrimary"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:onClick="answer3bool"
                android:id="@+id/answer3"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q3a4"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:background="@color/buttonPrimary"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:id="@+id/answer4"
                android:onClick="answer4bool"/>
        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/answers2">
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/answerButton"
            android:padding="16dp"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:onClick="nextQuestion"/>

        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#000000"
            android:layout_above="@id/nextButton"
            android:id="@+id/line"
            ></View>
</RelativeLayout>
    </RelativeLayout>
</ScrollView>